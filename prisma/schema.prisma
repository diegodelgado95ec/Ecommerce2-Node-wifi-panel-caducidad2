generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  price       Float
  stock       Int      @default(0)
  unit        String
  image       String
  rating      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  OrderItem   OrderItem[]
  StockMovement StockMovement[]
}

model Order {
  id          Int      @id @default(autoincrement())
  total       Float
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  items       OrderItem[]
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  quantity    Int
  price       Float
  orderId     Int
  productId   Int
  order       Order    @relation(fields: [orderId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
}

model StockMovement {
  id          Int      @id @default(autoincrement())
  quantity    Int
  type        String   // "in" or "out"
  productId   Int
  product     Product  @relation(fields: [productId], references: [id])
  createdAt   DateTime @default(now())
  note        String?
}